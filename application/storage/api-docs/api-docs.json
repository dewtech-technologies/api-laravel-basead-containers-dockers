    "components": {
        "schemas": {
            "UserRequestsDto": {
                "required": [
                    "name",
                    "email",
                    "password",
                    "remember_token"
                ],
                "properties": {
                    "name": {
                        "description": "User name",
                        "type": "string"
                    },
                    "email": {
                        "description": "User email",
                        "type": "string"
                    },
                    "password": {
                        "description": "User password",
                        "type": "string"
                    },
                    "remember_token": {
                        "description": "User remember token",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "Error": {
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Error message."
                    },
                    "status": {
                        "type": "boolean",
                        "example": false
                    }
                },
                "type": "object"
            }
